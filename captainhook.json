{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "vendor/bin/pint --test",
        "options": {},
        "conditions": []
      },
      {
        "action": "vendor/bin/phpstan analyse --memory-limit=2G",
        "options": {},
        "conditions": []
      },
      {
        "action": "\\CaptainHook\\App\\Hook\\File\\Action\\DoesNotContainRegex",
        "options": {
          "regex": "/dd\\(|var_dump\\(|print_r\\(/",
          "name": "Debug code (dd, var_dump, print_r)"
        }
      }
    ]
  },
  "commit-msg": {
    "enabled": true,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
        "options": {
          "regex": "/^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\\(.+\\))?: .{1,72}/",
          "error": "A mensagem de commit deve seguir o padr√£o Conventional Commits (ex: feat: nova feature, fix: corrige bug)."
        }
      }
    ]
  },
  "pre-push": {
    "enabled": false,
    "actions": []
  }
}